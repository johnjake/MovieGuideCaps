<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="@dimen/pixels_130"
              android:layout_height="245dp"
              android:layout_marginStart="4dp"
              android:background="@color/darkCyan"
              android:layout_marginTop="@dimen/pixels_8"
              android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mortal_movie"
            android:scaleType="fitCenter"
            app:riv_mutate_background="true"/>
    </FrameLayout>

    <TextView
        android:id="@+id/txtMovieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_alpha_70"
        android:textColorHint="@color/white_alpha_70"
        android:textStyle="bold"
        android:textSize="11sp"
        android:hint="@string/track_name"/>

    <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/track_name"
            android:textColor="@color/white_alpha_70"
            android:textStyle="bold"
            android:textSize="9sp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/textViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/darkCyan"
                android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
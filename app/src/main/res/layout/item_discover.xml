<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/pixels_150"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/pixels_4"
    android:layout_marginStart="@dimen/pixels_4"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/imgDiscover"
        android:layout_width="0dp"
        android:layout_height="@dimen/pixels_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_deep_movie"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:textColor="@color/white_alpha_70"
        android:id="@+id/textDiscoverTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textStyle="bold"
        android:textSize="10sp"
        android:text="@string/movie_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgTopRated" />
</androidx.constraintlayout.widget.ConstraintLayout>